{
  "name": "honkit-plugin-mermaid",
  "description": "Plugin for honkit which renders Mermaid flow from markdown.",
  "main": "index.js",
  "version": "0.0.2",
  "engines": {
    "honkit": "*"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn copy:assets && yarn copy:book",
    "copy:assets": "mkdirp dist/assets && cpx ./node_modules/mermaid/dist/mermaid.min.js dist/assets",
    "copy:book": "mkdirp dist/book && cpx ./book/plugin.js dist/book",
    "prepare": "husky install"
  },
  "dependencies": {
    "mermaid": "^9.1.7"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "husky": "^8.0.1",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ybougo/honkit-plugin-mermaid.git"
  },
  "author": "ybougo",
  "license": "ISC",
  "homepage": "https://github.com/ybougo/honkit-plugin-mermaid#readme"
}
