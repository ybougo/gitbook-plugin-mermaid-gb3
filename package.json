{
  "name": "honkit-plugin-mermaid-md-adoc",
  "description": "Plugin for honkit which renders Mermaid flow from markdown.",
  "main": "dist/index.js",
  "files": ["./dist"],
  "version": "0.0.4",
  "engines": {
    "honkit": "*"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn copy:src && yarn copy:mermaid",
    "copy:src": "mkdirp dist && cpx 'src/**' dist",
    "copy:mermaid": "mkdirp dist/assets && cpx './node_modules/mermaid/dist/mermaid.min.js*' dist/assets",
    "prepare": "husky install"
  },
  "devDependencies": {
    "mermaid": "^9.1.7",
    "cpx": "^1.5.0",
    "husky": "^8.0.1",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ybougo/honkit-plugin-mermaid.git"
  },
  "author": "ybougo",
  "license": "ISC",
  "homepage": "https://github.com/ybougo/honkit-plugin-mermaid#readme"
}
